<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_big_voice_room"
    android:orientation="vertical">

    <com.test.appe.ItemVoiceRoomView
        android:id="@+id/gift_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60" />

    <LinearLayout
        android:id="@+id/linear_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_250">

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_first"
        android:layout_marginTop="@dimen/dp_20">

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.test.appe.ItemVoiceRoomView
            android:id="@+id/gift8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/view_dot1"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot2"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot3"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot4"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot5"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot6"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot7"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot8"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />

    <ImageView
        android:id="@+id/view_dot9"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:src="@mipmap/gift" />
</RelativeLayout>
